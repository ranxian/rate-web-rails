<p id="notice"><%= notice %></p>

<h1>Listing Benches</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Num of genuine</th>
      <th>Num of imposter</th>
      <th>Strategy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @benches.each do |bench| %>
      <tr>
        <td><%= bench.name %></td>
        <td><%= bench.description %></td>
        <td><%= bench.num_of_genuine %></td>
        <td><%= bench.num_of_imposter %></td>
        <td><%= bench.strategy %></td>
        <td><%= link_to 'Show', bench %></td>
        <td><%= link_to 'Edit', edit_bench_path(bench) %></td>
        <td><%= link_to 'Destroy', bench, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

