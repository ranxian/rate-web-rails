<%= form_for(@view) do |f| %>
  <% if @view.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@view.errors.count, "error") %> prohibited this view from being saved:</h2>

      <ul>
      <% @view.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 3, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :strategy %>
    <% if @view.new_record? %>
      <%= f.select :strategy, View::VALID_STRATEGIES.collect { |s| [s.to_s, s.to_s] }, {}, class: 'form-control', id: 'strategy' %>
    <% else %>
      <%= f.select :strategy, View::VALID_STRATEGIES.collect { |s| [s.to_s, s.to_s] }, {}, class: 'form-control', id: 'strategy', disabled: true %>
    <% end %>
  </div>

  <div id="view-by-import-tag">
    <div class="form-group">
      <%= f.label :import_tag %>
      <%= f.text_field :import_tag, class: 'form-control' %>
    </div>
  </div>

  <div id="view-by-file">
    <div class="form-group">
      <%= f.label :file %>
      <%= f.file_field :file %>
      <p class="help-block">Upload a file with one sample uuid per line, must hava a '.txt' extension</p>
    </div>
  </div>

  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
