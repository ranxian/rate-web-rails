<p id="notice"><%= notice %></p>

<h1>Views</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th># Classes</th>
      <th># Samples</th>
      <th># Benchmarks</th>
      <th>Strategy</th>
      <th>UUID</th>
      <th>Created</th>
    </tr>
  </thead>

  <tbody>
    <% @views.each do |view| %>
      <tr>
        <td><%= link_to view.name, view %></td>
        <td><%= view.description %></td>
        <td><%= view.num_of_classes %></td>
        <td><%= view.num_of_samples %></td>
        <td><%= view.benches.count %></td>
        <td><%= view_verbose_strategy(view) %></td>
        <td><%= view.short_uuid %></td>
        <td><%= view.created_at.strftime("%y' %b %d - %H:%M") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @views %>

<% content_for :sidebar do %>
<%= link_to 'Create View', new_view_path, class: 'btn btn-primary' %>
<div class="panel panel-default">
  <div class="panel-body">
    You have <%= current_user.generated_views.count %> views in total
  </div>
</div>
<% end %>

