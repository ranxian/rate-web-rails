<p id="notice"><%= notice %></p>

<h1>Views</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th># Classes</th>
      <th># Samples</th>
      <th># Benchmarks</th>
      <th>Strategy</th>
      <th>UUID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @views.each do |view| %>
      <tr>
        <td><%= link_to view.name, view %></td>
        <td><%= view.description %></td>
        <td><%= view.num_of_classes %></td>
        <td><%= view.num_of_samples %></td>
        <td><%= view.benches.count %></td>
        <td><%= view.verbose_strategy %></td>
        <td><%= view.short_uuid %></td>
        <td><%= link_to 'Show', view %></td>
        <td><%= link_to 'Edit', edit_view_path(view) %></td>
        <td><%= link_to 'Destroy', view, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% content_for :sidebar do %>
<%= link_to 'New View', new_view_path, class: 'btn btn-primary' %>
<% end %>

