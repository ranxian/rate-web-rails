<p id="notice"><%= notice %></p>

<h1>Views</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Num of classes</th>
      <th>Num of samples</th>
      <th>Strategy</th>
      <th>UUID</th>
    </tr>
  </thead>

  <tbody>
    <% @views.each do |view| %>
      <tr>
        <td><%= link_to view.name, view %></td>
        <td><%= view.description %></td>
        <td><%= view.num_of_classes %></td>
        <td><%= view.num_of_samples %></td>
        <td><%= view.strategy %></td>
        <td><%= view.short_uuid %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% content_for :sidebar do %>
<%= link_to 'New View', new_view_path, class: 'btn btn-primary' %>
<% end %>

