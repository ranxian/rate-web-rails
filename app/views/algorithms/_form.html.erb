<%= form_for(@algorithm, html: { class: 'form-validate' }) do |f| %>
  <% if @algorithm.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@algorithm.errors.count, "error") %> prohibited this algorithm from being saved:</h2>

      <ul>
      <% @algorithm.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 3, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :enroll_exe %>
    <%= f.file_field :enroll_exe, required: true, disabled: !@algorithm.new_record? %>
    <p class="help-block">Must be windows executable</p>
  </div>

  <div class="form-group">
    <%= f.label :match_exe %>
    <%= f.file_field :match_exe, required: true, disabled: !@algorithm.new_record? %>
    <p class="help-block">Must be windows executable</p>
  </div>
    
  <%= f.submit "Create Algorithm", class: "btn btn-primary" %>

<% end %>
